# Example environment variables for production. Copy to .env and fill secrets.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=identity_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/identity_db

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# RSA keys for RS256 JWT. In production use secure key management.
JWT_PRIVATE_KEY_PATH=secrets/dev_private.pem
JWT_PUBLIC_KEY_PATH=secrets/dev_public.pem
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_SECONDS=900
REFRESH_TOKEN_EXPIRE_SECONDS=604800

# App
APP_HOST=0.0.0.0
APP_PORT=8000

RATELIMIT_REQUESTS=10
RATELIMIT_WINDOW_SECONDS=60
